{% extends "layouts/main.nunj" %}


{% block content %}
    <div class="content">
        <h1 class="pageTitle">Components</h1>

        <p>Below are all of the available components.</p>

        <section>
            <h2 class="sectionHeader">Buttons</h2>
            <h3 class="subHeader">Standard button</h3>
            {{ button.standard("Button") }}
            {{ button.standard("Link", "#") }}


            {{ button.standard("Coloured", { color: "red"}) }}
            {{ button.standard("Outline", { outline: true}) }}
            {{ button.standard("Full width", { full: true}) }}
            {{ button.standard("Disabled", { disabled: true}) }}
        </section>

        <section>
            <h2 class="sectionHeader">Images</h2>

            <h3 class="subHeader">Figure</h3>
            {{ image.figure("//placehold.it/220x189?text=Placeholder", "Alt", "Caption") }}
        </section>

        <section>
            <h2 class="sectionHeader">Banners</h2>

            <h3 class="subHeader">Hero</h3>
            {{ banner.hero("//placehold.it/220x189?text=Placeholder", "Hero Banner", "Strapline") }}

            <h3 class="subHeader">Half</h3>
            {{ banner.half("//placehold.it/220x189?text=Placeholder", "Half Banner", "Strapline", "<p>HTML</p>") }}
        </section>

    </div>
{% endblock %}
